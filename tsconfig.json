{
  "compilerOptions": {
    "target": "esnext",
    "module": "ESNext",
    "lib": ["ES2023", "DOM"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/types"], // Add this line
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}