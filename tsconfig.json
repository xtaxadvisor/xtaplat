{
  "compilerOptions": {
    "target": "ES2023",
    "module": "ESNext",
    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",  // Updated for the new JSX transform
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "types/*": ["types/*"]
    },
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "noEmit": true,  // Useful for projects using a bundler like Vite or Webpack
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitOverride": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,  // For default import compatibility
    "typeRoots": ["./node_modules/@types", "./types"],
    "types": ["node", "jest"]  // Specify types to be included
  },
  "include": [
    "src/**/*",
    "types/**/*"
  ],
  "exclude": [
    "node_modules",  // Ignore node_modules
    "dist"           // Ignore dist directory
  ]
}